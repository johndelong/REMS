        <!--<TextBox x:Name="messageText" Height="23" Width="120" Text="{Binding Path=Name2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="34,334,639.6,215"/>-->

    </Grid>
</Window>
