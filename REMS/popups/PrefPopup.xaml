<Window x:Class="REMS.popups.PrefPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="500" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <TabControl Margin="10,10,9.6,37">
            <TabItem Header="Thresholds">
                <Grid Background="#FFE5E5E5">
                    
                    <DataGrid Name="gridThresholds" IsReadOnly="true" AutoGenerateColumns="False" Margin="10,40,215.8,36.6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding name}" Header="Name" Width="SizeToCells" IsReadOnly="true"/>
                        </DataGrid.Columns>
                        <DataGrid.ItemContainerStyle>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseUp" Handler="gridThresholdData_Selected"/>
                            </Style>
                        </DataGrid.ItemContainerStyle>
                    </DataGrid>
                    <DataGrid Name="gridThresholdData"  AutoGenerateColumns="false" Margin="154,40,9.8,36.6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding frequency}" Header="Frequency (Hz)" Width="SizeToCells" IsReadOnly="false"/>
                            <DataGridTextColumn Binding="{Binding amplitude}" Header="Amplitude (dBmv)" Width="SizeToCells" IsReadOnly="false"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Name="btnEdit"  Content="Edit" Margin="0,0,9.6,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="click_edit"/>
                    <Button Name="btnRemove"  Content="Remove"  Margin="0,0,89.8,9.6" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
                    <Button Name="btnAdd" Content="Add" Margin="0,0,169.8,9.6" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="click_add"/>
                    <Label Content="User Defined Thresholds" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Name="btnApply"  Content="Apply" IsEnabled="false"  Margin="0,0,9.6,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button Name="btnCancel" Content="Cancel" Margin="0,0,89.6,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button Name="btnOK" Content="OK" Margin="0,0,169.6,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
    </Grid>
</Window>
