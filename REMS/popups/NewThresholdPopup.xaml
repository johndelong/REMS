        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Threshold" Height="350" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Button Name="btnAdd" Content="+" Margin="0,0,34.6,48.4" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="20"/>
        <Button Name="btnRemove" Content="-" Margin="0,0,9.6,48.4" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="20"/>
        <Button Name="btnCancel" Content="Cancel" Margin="0,0,9.6,10.4" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button Name="btnOK" Content="OK" Margin="0,0,89.6,10.4" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <DataGrid Name="thresholdDefGrid" IsReadOnly="true" AutoGenerateColumns="True" Margin="10,10,9.6,73.4"/>
    </Grid>
</Window>
