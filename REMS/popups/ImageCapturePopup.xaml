<Window x:Class="REMS.popups.ImageCapturePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageCapturePopup" Height="447.544" Width="574.608">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        
        <WindowsFormsHost Name="windowsFromsHost1" Grid.Column="0" SizeChanged="windowsFromsHost1_SizeChanged" />
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button Name="btnDevice" Content="Device" Grid.Row="0" Height="22" Width="75" Click="icImagingControl1_Load"/>
            <Button Name="btnProperties" Content="Properties" Grid.Row="1" Height="22" Width="75" Click="click_properties"/>
            <Button Name="btnCapture" Content="Capture" Grid.Row="2" Height="22" Width="75" Click="click_capture"/>
        </Grid>
    </Grid>
</Window>
